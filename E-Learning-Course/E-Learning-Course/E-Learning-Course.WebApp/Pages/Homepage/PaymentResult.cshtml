@page
@model E_Learning_Course.WebApp.Pages.Homepage.PaymentResultModel
@{
    Layout = "_Layout";
}

<div class="container mt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm text-center">
                <div class="card-header bg-primary text-white">
                    <h2>Payment Result</h2>
                </div>
                <div class="card-body">
                    @if (Model.IsSuccessful)
                    {
                        <h3 class="text-success"><i class="fa-solid fa-check-circle"></i> @Model.Message</h3>
                        <p>Your payment has been processed successfully.</p>
                        <p>You can now access your course from your dashboard.</p>
                        <a asp-page="/Homepage/Index" class="btn btn-primary btn-lg mt-4">Go to Dashboard</a>
                    }
                    else
                    {
                        <h3 class="text-danger"><i class="fa-solid fa-times-circle"></i> @Model.Message</h3>
                        <p>We encountered an issue with your payment.</p>
                        <p>Please try again later or contact our support team.</p>
                        <a asp-page="/Homepage/Index" class="btn btn-secondary btn-lg mt-4">Browse Courses</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
