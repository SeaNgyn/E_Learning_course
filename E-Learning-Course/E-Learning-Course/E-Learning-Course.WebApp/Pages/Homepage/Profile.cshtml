@page
@model E_Learning_Course.WebApp.Pages.Homepage.ProfileModel
@{
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .profile-card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }



    .siber-card {
        width: 100%;
        max-width: 260px;
        height: 280px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin: 0 auto;
    }

        .siber-card .header {
            background-color: #0d6efd;
            padding: 30px 0;
        }

            .siber-card .header img {
                border-radius: 50%;
                width: 90px;
                height: 90px;
                object-fit: cover;
                border: 4px solid white;
            }

        .siber-card h5 {
            margin-top: 10px;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .siber-card p {
            color: #6c757d;
            font-size: 0.9rem;
        }

    .profile-content {
        padding: 40px;
    }

        .profile-content h5 {
            font-size: 1.25rem;
            margin-bottom: 30px;
            border-bottom: 2px solid #ddd;
            padding-bottom: 10px;
            margin-top: 20px;
            font-weight:bold;
        }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #f14668;
        }

    /* .breadcrumb {
        background-color: transparent;
        margin-bottom: 20px;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
        color: #6c757d;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    } */

    label {
        font-weight: bold;
        color: #555;
    }

    /* .row-label {
        font-size: 0.875rem;
        margin-bottom: 5px;
    } */

    .profile-container {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .course-card {
        display: flex;
        align-items: center;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 15px;
        transition: box-shadow 0.3s ease;
    }

        .course-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .course-image {
        width: 200px;
        height: 90px;
        border-radius: 8px;
        margin-right: 15px;
        object-fit: cover;
    }

    .course-details h6 {
        font-weight: bold;
        margin: 0;
    }

    .course-details p {
        color: #6c757d;
        margin: 5px 0 0;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-5 profile-container">
    <div class="row">
        <div class="col-md-3">
            <div class="d-flex justify-content-center align-items-start">
                <div class="siber-card" style="margin-top: 70px;" @* id="profileCard" *@>
                    <div class="header">
                        <img src="@Model.GetUser.Avatar" alt="Profile Image" @* id="profileImage" *@>
                    </div>
                    <h5>@Model.GetUser.LastName @Model.GetUser.FirstName</h5>
                    <p>@Model.Role</p>
                    <!-- Hidden input for file selection -->
                    @* <input type="file" id="imageInput" style="display: none;" accept="image/*"> *@
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-card">
                <div class="profile-content">
                    <h5>Trang chủ của tôi</h5>
                    <p style="font-weight:bold">Introduce</p>
                    <p>Member of ELearning - since @Model.GetUser.CreatedAt.ToString("dd/MM/yyyy") @* 5 months ago *@</p>
                    <h5>Courses attended</h5>

                    @foreach (var enrollment in Model.Enrollments)
                    {
                        <a asp-page="/Homepage/LearningCourse" asp-route-courseId="@enrollment.Course?.Id" asp-route-lessonId="1" class="course-card">
                            <img src="@enrollment.Course?.Thumbnail"  class="course-image" alt="Course Image">
                            <div class="course-details">
                                <h6>@enrollment.Course?.Title</h6>
                                <p>@Html.Raw(enrollment.Course?.Description)</p>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>